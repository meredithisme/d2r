<!DOCTYPE html>
<html>
<%- include _head.ejs %>

<body>
  <%- include _navbar.ejs %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="eventPageHeader"></div>
        <div class="np-title">Popular Non-Profits</div>
      </div>
    </div>
    <h4>Greeting!
                <% if (user && user.email) { %>
                  You're logged in as <%= user.email %>!</h1>
                  <a href="/logout" class="btn btn-default" id="logout">Log Out</a>
                <% } else { %>
                  You're not logged in. </h4>
                  <a href="/">Log in</a>
                <% } %>

      <div class="row events">
        <div class="col-xs-12 col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-2">
      
       <form id ="newEvent">
          <legend>Create new Event</legend>
        <input name="name" type="text" class="form-control" id="eventName" placeholder="Event Name">
        <input name="detail" type="text" class="form-control" placeholder="Event Detail">
      </form>
      </div>
      <div class="col-sm-3 col-sm-offset-2">
        <div id="datepicker"></div>
        <button type="submit" class="btn btn-primary">Add</button>
     </div>
     </div>

      <div class="col-sm-6 col-sm-offset-2">
          <div class="list-group events" id="events-ul">
          <h3>Event Lists</h3>
          <% events.forEach(function(event) { %>
  
            <p><a href="/events/<%= event._id %>"><%= event.name %> <%= event.number %></a><span data-id="<%= event._id %>" class='glyphicon glyphicon-hdd pull-right'></span></p>
            <% }); %>
          </div>
        </div>
      </div>  
    </body>
  </html>