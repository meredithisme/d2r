<!DOCTYPE html>
<html>
<%- include _head.ejs %>

<body>

  <%- include _navbar.ejs %>
  
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="eventPageHeader"></div>
         <h1><div class="np-title">Connect to a community near you.</div></h1>
      </div>
    </div>

  
    <div class="col-sm-6 col-sm-offset-1 text-center">
    <a href="/event/new"><button type="submit" id="createEvent" class="btn btn-primary searchBtn">Create Event</button>
    </a>
    </div>
  </div>

      <div class="row events">
        <div class="col-xs-12 col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-2">

        <a href="/event/Environment_Animals"><button type="submit" id="Environment_Animals" class="btn btn-primary searchBtn">Environment & Animals</button></a>

        <a href="/event/Civil Rights"><button type="submit" class="btn btn-primary searchBtn">Civil Rights</button></a>

        <a href="/event/Arts_Culture"><button type="submit" class="btn btn-primary searchBtn">Arts & Culture</button></a>

        <a href="/event/Education"><button type="submit" class="btn btn-primary searchBtn">Education</button></a>

        <a href="/event/Public_Sector"><button type="submit" class="btn btn-primary searchBtn">Public Sector</button></a>

        <a href="/event/International"><button type="submit" class="btn btn-primary searchBtn">International</button></a>

        <a href="/event/Religion"><button type="submit" class="btn btn-primary searchBtn">Religion</button></a>

        <a href="/event/Human_Services"><button type="submit" class="btn btn-primary searchBtn">Human Services</button></a>

        <a href="/event/Health"><button type="submit" class="btn btn-primary searchBtn">Health</button></a>

        <a href="/eventcenter"><button type="submit" class="btn btn-warning resetBtn">Clear Filter</button></a>

          <div class="list-group events" id="events-ul">
          <h3>Event Lists</h3>
          <% events.forEach(function(event) { %>
            <p><a href="/events/<%= event._id %>">Title: <%= event.title %> 
            <br>
            Detail: <%= event.detail %>
            <br>
            Date: <%= event.event_date %></a>
            <span data-id="<%= event._id %>" class='glyphicon glyphicon-calendar pull-right'></span></p>
            <% }); %>
          </div>
        </div>
         <div class="col-xs-2 col-xs-offset-1 col-sm-3 col-sm-offset-2">
        <div id="datepicker"></div>
     </div>
        </div>
      </div>  
    </body>
  </html>