<!DOCTYPE html>
<html>
<%- include _head.ejs %>
<body>
  
  <%- include _navbar.ejs %>

    <!--user image and name in panel header responsive -->
   <div class="goDown">
     <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
       <div class="panel panel-default panel-profile">
        <div class="panel-heading" style="background-image: url(http://i.imgur.com/pIln7gw.jpg)">
         <div class="panel-body text-center">  	
          <img class="img-circle media-object">
          <h3 class="profile-header-user"></h3>
        </div>
      
      <!-- closes panel header -->
      <!-- beginning of panel body -->
      
      
       <h5 class="joinedat text-center">Non-Profit Name: <%= user.organization_name %></p>
       <h5 class="joinedat text-center">Website <%= user.organizationUrl %></p>
       </div>
       <div class="panel-body text-center">
       <ul class="panel-menu">
        
         <a href="#profile-modal" class="text-inherit" data-toggle="modal">
          Update
        </a>
      
      
       <a href="#userModal" class="text-inherit" data-toggle="modal">
        
       </a>
     
   </ul>
 </div>
</div>
</div>
</div>



 <!-- Beginning of Event container ==============
 ====  Stores users first name and event history --> 

 <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2">
   <ul class="list-group media-list media-list-stream">
    <li class="media list-group-item p-a">
     <div class="inbox text-center">Up Coming Events</div>
     <% events.forEach(function(event) { %>
       <p><img src="<%= event.url %>" class="imgthumbnail">
       <a href="/events/<%= event._id %>"><%= event.title %>
       <br>
       <%= event.detail %>
       <br>
       <%= event.event_date %></a>
       <span data-id="<%= event._id %>"></span>
       
       </p>
       <% }); %>
   </li>
 </ul>
</div>
</div>
</div>
</div>
<!--- Modal for Profile Upsate -->
<div class="modal fade" id="profile-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#organization-tab" data-toggle="tab">Organization<i class="fa"></i></a></li>
            <li><a href="#volunteer-tab" data-toggle="tab">Volunteer<i class="fa"></i></a></li>
        </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="organization-tab">
                  <form id="organizationForm" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Organization Name</label>
                        <div class="col-xs-5">
                           <input type="text" name="organization_name" class="form-control" placeholder="Serria Club" required autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-3 control-label">Organization url</label>
                        <div class="col-xs-5">
                            <input type="text" name="organizationUrl" class="form-control" placeholder="www.sierraclub.org" required autofocus>
                        </div>
                    </div>
                    <input type="hidden" name="is_organization" value="true">
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-xs-5 col-xs-offset-3">
                            <button type="submit" class="btn btn-default">Update</button>
                        </div>
                    </div> 
                  </form>
                </div>
                <div class="tab-pane" id="volunteer-tab">
                  <form id="volunteerForm" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-3 control-label">First Name</label>
                        <div class="col-xs-5">
                            <input type="text" name="first_name" class="form-control" placeholder="John" required autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-3 control-label">Last Name</label>
                        <div class="col-xs-5">
                            <input type="text" name="last_name" class="form-control" placeholder="Muir" required autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-3 control-label">Occupation</label>
                        <div class="col-xs-5">
                            <input type="text" name="occupation" class="form-control" placeholder="Naturalist" required autofocus>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <div class="col-xs-5 col-xs-offset-3">
                            <button type="submit" class="btn btn-default">Update</button>
                        </div>
                    </div>
                  </form>
                </div>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</body>
</html>





