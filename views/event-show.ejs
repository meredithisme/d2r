<!DOCTYPE html>
<html>
<%- include _head.ejs %>
<body>
	<%- include _navbar.ejs %>
	
		<div class="container">
			<div class="row">
				<div class="eventImage">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<img src=" <%= event.url %>">
					</div>
				</div>
			</div>

		<div class="events">
			<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-4">
				<p>Details: <%= event.detail %></p>
				<p>Date: <%= event.event_date %></p>

				<p>Location: <%= event.location %></p>
				<p>Created at: <%= event.created %></p>
				<% if (user) { %>
				<% if (user.is_organzation == true) { %>
				<p>Thanks for Supporting the Community</p>
				<% } else { %>
					<% if (!rsvp) { %>
					<button type= "submit" class="btn btn-danger" id="rsvp">RSVP</button>
					<% }else{%>
					<button type= "submit" class="btn btn-warning" id="un_rsvp">Cancel RSVP</button>
					<% } %>
				<% } %>
				<% }else {%>			
				<h4><a href="#signup-modal" data-toggle="modal" class="sign-up">Please Sign Up</a></h4>
				<% } %>


				<h4><a href="/eventcenter">Back to Events</a></h4>	  
			</div>
		</div>
	</div>


</body>
</html>

